package ciociaria.annunci.it.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import ciociaria.annunci.it.controller.dto.AmministratoreDto;
import ciociaria.annunci.it.controller.dto.UtenteComuneDto;
import ciociaria.annunci.it.service.ServiceUtente;
import lombok.AllArgsConstructor;

@AllArgsConstructor
@RestController
@RequestMapping("/utente")
public class UtenteComuneController {

	@Autowired
	private final ServiceUtente service;

	/*
	 * UTENTE COMUNE
	 */
	@GetMapping("/")
	public List<UtenteComuneDto> fetchAllUtenteComune() {
		return service.findAllUtenteComune();
	}

	@GetMapping("/{id}")
	public UtenteComuneDto fetchUtenteComune(@PathVariable("id") String id) {
		return service.findUtenteComuneById(id);
	}

	/*
	 * AMMINISTRATORE
	 */
	@GetMapping("/amministratore")
	public List<AmministratoreDto> fetchAllUtenteAmministratore() {
		return service.findAllUtenteAmministratore();
	}

	@GetMapping("/amministratore/{username}")
	public List<AmministratoreDto> fetchUtenteAmministratore(@PathVariable("username") String username) {
		return service.findUtenteAmministratoreByUsername(username);
	}

}
