package ciociaria.annunci.it.service;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import ciociaria.annunci.it.model.bean.Sottocategoria;
import ciociaria.annunci.it.model.repository.SottocategoriaRepository;
import lombok.AllArgsConstructor;

@AllArgsConstructor
@Service
public class CategoriaService {

	@Autowired
	private final SottocategoriaRepository repository;
	
	/**
	 * Cerca tutte le categorie disponibili all'interno del database
	 * 
	 * @return: elenco delle categorie
	 */
	public List<String> findAllCategoria() {
		List<Sottocategoria> listSottocategoria = repository.findAll();
		
		List<String> listCategoria = new ArrayList<>();
		
		listSottocategoria.stream().forEach(System.out::println);
		
		return List.of("");
		
	}
	
}