	private Database() {
		try(MongoClient mongoClient = MongoClients.create(URI)) {
			MongoDatabase database = mongoClient.getDatabase(nameDatabase);
			try() {
				
			} catch(MongoException me) {
				
			}
		}
	}

	public static Database getInstance() {
