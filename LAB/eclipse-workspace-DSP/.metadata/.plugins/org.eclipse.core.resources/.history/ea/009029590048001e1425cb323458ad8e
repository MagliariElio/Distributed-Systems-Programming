package ciociaria.annunci.it.controller;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.validation.BindingResult;
import org.springframework.validation.FieldError;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;

import ciociaria.annunci.it.controller.dto.AnnuncioMotoriDto;
import ciociaria.annunci.it.controller.dto.mapper.AnnuncioMotoriDtoMapper;
import ciociaria.annunci.it.model.bean.AnnuncioMotori;
import ciociaria.annunci.it.service.AnnunciService;
import ciociaria.annunci.it.service.UtenteService;
import jakarta.validation.Valid;
import lombok.AllArgsConstructor;

@AllArgsConstructor
@RestController
@RequestMapping("/api/v1/annunci")
public class AnnunciController {

	@Autowired
	private final AnnunciService service;

	@Autowired
	private final AnnuncioMotoriDtoMapper mapperAnnuncioMotori;

	@RequestMapping(path = "/motori", method = RequestMethod.GET)
	public List<AnnuncioMotori> fetchAllAnnunciMotori() {
		return service.findAllAnnunciMotori();
	}

	// ResponseEntity<AnnuncioMotori>
	@RequestMapping(path = "/motori", method = RequestMethod.POST)
	public Object saveAnnuncioMotori(@Valid @RequestBody AnnuncioMotoriDto annuncio, BindingResult result) {
		if (result.hasErrors()) {
			List<String> errors = new ArrayList<>();
			for (FieldError field : result.getFieldErrors()) {
				errors.add(field.getDefaultMessage());
			}
			return ResponseEntity.badRequest().body(errors);
		}
		
		System.out.println(annuncio.getFotoAnnuncio());

		AnnuncioMotori annuncioMotori = mapperAnnuncioMotori.apply(annuncio);
		System.out.println(annuncioMotori);

		try {
			service.saveAnnuncioMotori(annuncioMotori);
		} catch (Exception e) {
			return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR).body(e.getMessage());
		}

		return annuncio;
	}

}
