package it.ciociariaannunci.logic.resources;

import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.json.simple.JSONArray;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;

import it.ciociariaannunci.logic.model.bean.TipologiaVeicolo;

public final class SetOfDataDettagliAnnunciMotori {
	private final static List<String> condizioniVeicolo; 							// contiene tutte le possibili opzioni di condizioni per un veicolo
	private final static List<String> alimentazione;								// contiene tutte le possibili opzioni di alimentazione
	private final static List<String> cambio;										// contiene tutte le possibili opzioni attribuibili al campo cambio
	private final static List<String> colore;										// contiene tutte le possibili opzioni di colori
	private final static List<Integer> porte;										// contiene tutte le possibili opzioni del numero di porte
	private final static Map<String, List<TipologiaVeicolo>> tipologieVeicolo;		// contiene tutte le possibili tipologie di veicoli a seconda della sottocategoria
	
	//TODO: da inserire tutte le tipologie di auto con marca e modelli
	
	static {
		condizioniVeicolo = new ArrayList<>();
			condizioniVeicolo.add("Nuovo");
			condizioniVeicolo.add("Come Nuovo");
			condizioniVeicolo.add("Ottimo");
			condizioniVeicolo.add("Buono");
			condizioniVeicolo.add("Danneggiato");
			condizioniVeicolo.add("Usato");

		alimentazione = new ArrayList<>();
			alimentazione.add("Benzina");
			alimentazione.add("Diesel");
			alimentazione.add("GPL");
			alimentazione.add("Metano");
			alimentazione.add("Elettrica");
			alimentazione.add("Ibrida");
			alimentazione.add("Altro");
		
		cambio = new ArrayList<>();
			cambio.add("Manuale");
			cambio.add("Automatico");
			cambio.add("Sequenziale");
			cambio.add("Altro");
			
		colore = new ArrayList<>();
			colore.add("Grigio");
			colore.add("Bianco");
			colore.add("Nero");
			colore.add("Rosso");
			colore.add("Giallo");
			colore.add("Verde");
			colore.add("Blu");
			colore.add("Altro");
		
		porte = new ArrayList<>();
			porte.add(0);
			porte.add(1);
			porte.add(2);
			porte.add(3);
			porte.add(4);
			porte.add(5);
			porte.add(6);
			porte.add(7);
			
		tipologieVeicolo = new HashMap<>();
		List<TipologiaVeicolo> elencoTipologiaAuto = elencoTipologiaAuto();
		List<TipologiaVeicolo> elencoTipologiaMoto = null;
		tipologieVeicolo.put(SetOfDataSottocategoria.elencoSottocategorieMotori
				.get(SetOfDataSottocategoria.elencoSottocategorieMotori.indexOf("Auto")), elencoTipologiaAuto);
		tipologieVeicolo.put(
				SetOfDataSottocategoria.elencoSottocategorieMotori
						.get(SetOfDataSottocategoria.elencoSottocategorieMotori.indexOf("Moto e Scooter")),
				elencoTipologiaMoto);
	}
	
	private static List<TipologiaVeicolo> elencoTipologiaAuto() {
		List<TipologiaVeicolo> elenco = new ArrayList<>();
		
		JSONParser json = new JSONParser();
		try (FileReader file = new FileReader("./src/mainresources/json/cars.json")) {
			Object obj = json.parse(file);
			JSONArray list = (JSONArray) obj;
			System.out.println(list);
		} catch (IOException | ParseException e) {
			e.printStackTrace();
		}
		
		return elenco;
	}

	public static List<String> getCondizioniVeicolo() {
		return condizioniVeicolo;
	}

	public static List<String> getAlimentazione() {
		return alimentazione;
	}

	public static List<String> getCambio() {
		return cambio;
	}

	public static List<String> getColore() {
		return colore;
	}

	public static List<Integer> getPorte() {
		return porte;
	}

	public static Map<String, List<TipologiaVeicolo>> getTipologieveicolo() {
		return tipologieVeicolo;
	}
}
